<Window x:Class="mymusicpol.Views.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mymusicpol.Views"
        mc:Ignorable="d"
        Title="Error" Height="200" Width="300"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ResizeMode="CanMinimize"
        Background="Transparent"
        SizeToContent="WidthAndHeight">

    <Grid Background="#202124" MinWidth="300">
        <Border BorderBrush="#121212" Background="#121212" BorderThickness="1" CornerRadius="10"  Margin="5"/>

        <TextBlock x:Name="Title" HorizontalAlignment="Center" Text="Title" Foreground="White" FontWeight="Bold" FontSize="20" Margin="0 10 0 0"></TextBlock>
        <TextBlock TextWrapping="WrapWithOverflow" HorizontalAlignment="Center" x:Name="Message" Foreground="White" Margin="10 40 10 30" FontSize="18">Content</TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BTN_OK" Click="Button_Click_OK" Style="{StaticResource CleanButton2}" Background="#202124" Foreground="#ecf0f1" Margin="10 70 10 10"  Width="60" Height="30" Content="OK"/>
        </StackPanel>
    </Grid>
</Window>
